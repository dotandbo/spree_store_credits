<%= f.field_container :amount do %>
  <%= f.label :amount, Spree.t("amount")%><br />
  <%= f.text_field :amount %>
<% end %>

<%= f.field_container :credit_type do %>
  <%= f.label :credit_type, Spree.t("credit_type")%><br />
  <%= f.select :credit_type, [['Store','store'],['Bonus','bonus']]%>
<% end %>

<%= f.field_container :expires_at do %>
  <%= f.label :expires_at, Spree.t("expires_at")%><br />
  <%= f.text_field :expires_at, :value => datepicker_field_value(@store_credit.expires_at), :size => nil, :class => 'datepicker' %>
<% end %>

<%= f.field_container :reason do %>
  <%= f.label :reason, "Reason(max of 255 characters)"%><br />
  <%= f.text_area :reason, size: "40x5", maxlength: 255 %>
<% end %>

<%= f.field_container :description do %>
  <%= f.label :description %><br />
  <%= f.select :description, [['Store Credit', 'Store Credit'],['Friend Invites Bonus', 'Friend Invites Bonus'], ['Promotional Bonus', 'Promotional Bonus'] ] %>
<% end %>

<%= f.field_container :minimum_order do %>
  <%= f.label :minimum_order %><br />
  <%= f.text_field :minimum_order %>
<% end %>  
